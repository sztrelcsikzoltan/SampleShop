@model IEnumerable<SampleShop.Core.ViewModels.CartItemViewModel>

@{
    ViewBag.Title = "Cart";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            Line Total
        </th>
        <th>
            Actions
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img class="img" style="height:50px" src="~/Content/ProductImages/@item.Image" alt="~/Content/ProductImages/@item.Image" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @String.Format("{0:c}", item.Price)
            </td>
            <td>
                @String.Format("{0:c}", item.Price * item.Quantity)
            </td>
            <td>
                <a href="@Url.Action("RemoveFromCart", "Cart", new { Id=item.Id  })" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
<tr>
    <td colspan="4" style="text-align:right"><b>Cart Total</b></td>
    <td>@String.Format("{0:c}", (from p in Model select p.Price * p.Quantity).Sum())</td>
    <td  style="min-width:100px">@Html.ActionLink("Back to List", "Index", "Home")</td>
    <td></td>
</tr>
<tr>
    <td colspan="5"></td>
    <td><a href="@Url.Action("Checkout","Cart")">Checkout</a></td>
</tr>
</table>
