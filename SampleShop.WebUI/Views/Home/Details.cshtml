@model SampleShop.Core.Models.Product

@{
    ViewBag.Title = Model.Name + "Details";
}

<h2>@Html.DisplayFor(model => model.Name) </h2>
<div class="row">
    <div class="col-md-4">
        <img class="img-responsive" src="~/Content/ProductImages/@Model.Image" alt="~/Content/ProductImages/@Model.Image" />
    </div>
    <div class="col-md-8">

        <dl class=" row dl-horizontal">
            <dt class="col-md-3">
                @Html.DisplayNameFor(model => model.Description)
            </dt>

            <dd class="col-md-9">
                @Html.DisplayFor(model => model.Description)
            </dd>

            <dt class="col-md-3">
                @Html.DisplayNameFor(model => model.Price)
            </dt>

            <dd class="col-md-9">
                @Html.DisplayFor(model => model.Price)
            </dd>

            <dt class="col-md-3"></dt>
            <dd class="col-md-9"><a href="#" class="btn btn-info">Add to Cart</a></dd>

            <dt class="col-md-3"></dt>
            <dd class="col-md-9">@Html.ActionLink("Back to List", "Index")</dd>
        </dl>
    </div>
</div>
<div class="col-md-12 clearfix"></div>
